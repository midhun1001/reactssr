{
  "name": "reactssr",
  "version": "0.0.1",
  "description": "React Server side rendering biolerplate",
  "main": "index.js",
  "repository": "https://github.com/midhun1001/reactssr.git",
  "author": "Midhun Murali",
  "license": "MIT",
  "scripts": {
    "build:server": "babel ./src/server -d build/server",
    "build:watch:server": "babel ./src/server -d build/server",
    "build:client": "webpack --config ./webpack.config.js/",
    "build:watch:client": "webpack --config ./webpack.config.js/",
    "build:prod": "npm run build:server && npm run build:client",
    "start": "npm run build:prod && cross-env NODE_ENV=production node ./build/server/index.js",
    "start:dev": "concurrently \"npm run build:watch:server\" \"npm run build:watch:client\" \"node ./build/server/index.js\"",
    "start:dev:client": "webpack-dev-server"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.5",
    "webpack-hot-middleware": "^2.22.3"
  }
}